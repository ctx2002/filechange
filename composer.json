{
  "name": "softwarewisdom/dirmonitor",
  "description": "Monitoring PHP files under a folder",
  "minimum-stability": "stable",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "anru chen",
      "email": "softwarewisdomltd@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.2.5"
  },
  "autoload": {
    "psr-4": {
      "Softwarewisdom\\DirMonitor\\": "src/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "8",
    "symfony/var-dumper": "^5.3",
    "phpstan/phpstan": "^1.2",
    "squizlabs/php_codesniffer": "*"
  },
  "scripts": {
    "test": "phpunit tests",
    "phpstan": "phpstan analyse --level max src",
    "phpcbf": "phpcbf --standard=PSR12 src",
    "phpcs": "phpcs --standard=PSR12 src"
  }
}
